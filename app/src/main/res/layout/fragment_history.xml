<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".History">

      <ListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="50dp"
          android:id="@+id/history_list"
          android:layout_gravity="center"
         />

      <FrameLayout
          android:id="@+id/historyDetailBottomSheet"
          style="@style/Widget.Material3.BottomSheet"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginTop="250dp"
          app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <!-- Drag handle for accessibility -->
            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/drag_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <com.google.android.material.card.MaterialCardView
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="28dp">

                  <ScrollView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center">


                              <androidx.fragment.app.FragmentContainerView
                                  android:id="@+id/previewRideMap"
                                  style="@style/ShapeAppearance.Material3.Corner.Medium"
                                  android:layout_width="match_parent"
                                  android:layout_height="250dp"
                                  android:layout_gravity="center"
                                  android:layout_marginTop="50dp">

                              </androidx.fragment.app.FragmentContainerView>

                              <TextView
                                  android:id="@+id/dateStarted"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Date Started: "
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginLeft="10dp"
                                  android:drawablePadding="10dp"
                                  />
                              <TextView
                                  android:id="@+id/dateEnded"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Date Ended: "
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginLeft="10dp"
                                  android:drawablePadding="10dp"/>



                              <TextView
                                  android:id="@+id/duration"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Duration: "
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>



                              <TextView
                                  android:id="@+id/regularPassengerQuantity"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>

                              <TextView
                                  android:id="@+id/studentPassengerQuantity"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>


                              <TextView
                                  android:id="@+id/seniorPassengerQuantity"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>


                              <TextView
                                  android:id="@+id/pwdPassengerQuantity"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>





                              <TextView
                                  android:id="@+id/distance"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_margin="5dp"
                                  android:layout_marginLeft="10dp"
                                  android:text="Distance: "
                                  android:textSize="20sp"
                                  android:drawablePadding="10dp"/>

                              <TextView
                                  android:id="@+id/fare"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Fare: "
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginStart="10dp"
                                  android:drawablePadding="10dp"/>

                              <TextView
                                  android:id="@+id/status"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:text="Status: "
                                  android:textSize="20sp"
                                  android:layout_margin="5dp"
                                  android:layout_marginLeft="10dp"
                                  android:drawablePadding="10dp"/>
                        </LinearLayout>

                  </ScrollView>


            </com.google.android.material.card.MaterialCardView>





      </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>