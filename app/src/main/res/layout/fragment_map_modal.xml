<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/passengerQuantityInputLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:hint="Enter quantity of passengers">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passengerQuantityEditText"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_height="wrap_content"
        android:inputType="number" />

</com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/fareTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">



    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/studentRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/pwdRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PWD" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/seniorRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senior" />

    <com.google.android.material.radiobutton.MaterialRadioButton
        android:id="@+id/regularRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regular" />

    </RadioGroup>

</LinearLayout>